= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :sent_at
    = f.datetime_select :sent_at
  .field
    = f.label :sender
    = f.text_field :sender
  .field
    = f.label :encoded_recipients
    = f.text_field :encoded_recipients
  .actions
    = f.submit 'Save'
