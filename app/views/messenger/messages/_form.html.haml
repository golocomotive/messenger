= simple_form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body

  .field
    = f.label :subject
    = f.text_field :subject

  = f.simple_fields_for :receivers do |sf|
    = sf.input :class, as: :hidden, input_html: { value: recipients[:class] }
    = sf.input :id,    as: :hidden, input_html: { value: recipients[:id] }

  .actions
    = f.submit 'Send'
